<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LeetCodeTracker" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">#1A73E8</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#D3E3FD</item>
        <item name="colorOnPrimaryContainer">#001C38</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#006A6A</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#6FF7F7</item>
        <item name="colorOnSecondaryContainer">#002020</item>

        <!-- Tertiary color -->
        <item name="colorTertiary">#7D5260</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#FFD8E4</item>
        <item name="colorOnTertiaryContainer">#31111D</item>

        <!-- Error color -->
        <item name="colorError">#BA1A1A</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">#FFDAD6</item>
        <item name="colorOnErrorContainer">#410002</item>

        <!-- Surface colors -->
        <item name="colorSurface">#FDFCFF</item>
        <item name="colorOnSurface">#1A1C1E</item>
        <item name="colorSurfaceVariant">#E0E2EC</item>
        <item name="colorOnSurfaceVariant">#44474E</item>

        <!-- Material 3 shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.ExtraSmall</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
